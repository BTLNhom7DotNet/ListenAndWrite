@model LisAndWri.Models.Audio
@{
    ViewBag.Title = "FullMode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    Full mode
}

@section jsFooter{
    <script src="~/Scripts/fullscript.js"></script>
}

<div class="container">
    <div class="row">
        <button id="level">@Html.ActionLink("Level " + Model.Level, "Move", "Audio", new { id = Model.Level }, null)</button>
        <h2 id="audioTitle">@Model.Title</h2>
        <p>Duration: @Model.Duration (s)</p>
        <p>Nhấn Play để bắt đầu làm bài</p>
        <div class="form-group row">
            <div class="col-lg-12">
                <button class="btn btn-info btn-sm" id="btn-prev">
                    <span class="glyphicon glyphicon-chevron-left">Back</span>
                </button>
                Track: <input type="text" id="currTrack" value="1" max="@Model.NumTrack" class="form-inline" style="max-width:30px" readonly />/ <input type="text" value="@Model.NumTrack" readonly id="numTrack" style="max-width:30px" />
                <button class="btn btn-info btn-sm btn-next" id="btn-next">
                    <span class="glyphicon glyphicon-chevron-right">Next</span>
                </button>
            </div>
        </div>

        @{var audioSrc = Url.Content("~/AudioData/" + Model.Title + ".mp3"); }

        <audio src="@audioSrc" hidden="hidden" id="audio"></audio>

        <label for="answer">Đáp án</label>
        <div class="form-group">
            <div id="answer" class="form-control " style="min-width:100%;font-weight:bolder;height:100px"></div>
        </div>

        <div class="form-group text-center">
            <button class="btn btn-info btn-lg" id="btn-play">
                <span class="glyphicon glyphicon-play"></span>Phát
            </button>
            <div class="btn btn-info btn-lg btn-next" id="btn-next2">
                <span class="glyphicon glyphicon-plus"></span>Next track
            </div>
            <div class="btn btn-info btn-lg" id="btn-score">
                <span class="glyphicon glyphicon-certificate"></span>Xem điểm
            </div>
        </div>
        <hr />
        <button class="btn btn-info btn-lg" id="btn-check">
            <span class="glyphicon glyphicon-eye-open"></span>Gợi ý
        </button>
        <hr />
        <label for="input">Câu trả lời</label>
        <div class="form-group">
            <textarea id="input" class="form-control input-lg col-lg-12" rows="5" style="min-width:100%;font-weight:bolder; height:50px"></textarea>
        </div>
    </div>
    <div>
        <span>A</span>
        <span>B</span>
        <span>C</span>
        <span>D</span>
        <span>E</span>
        <span>F</span>
        <span>G</span>
        <span>H</span>
        <span>I</span>
        <span>J</span>
        <span>K</span>
        <span>L</span>
        <span>M</span>
        <span>N</span>
        <span>O</span>
        <span>P</span>
        <span>Q</span>
        <span>R</span>
        <span>S</span>
        <span>T</span>
        <span>U</span>
        <span>V</span>
        <span>W</span>
        <span>X</span>
        <span>Y</span>
        <span>Z</span>
    </div>
</div>